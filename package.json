{
  "name": "otp-proxy",
  "version": "1.0.5",
  "description": "baidu otp proxy",
  "main": "index.js",
  "bin": {
    "otproxy": "./bin/otp.js"
  },
  "scripts": {
    "lint": "standard **/*.js --verbose --fix",
    "test": "cd ./test && NODE_ENV=test jest",
    "benchmark": "cd ./test && NODE_ENV=benchmark node --expose-gc ../cluster.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "keywords": [
    "proxy"
  ],
  "author": "xietianxin@baidu.com",
  "license": "MIT",
  "dependencies": {
    "@xtx1130/tb-log": "^2.0.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "tough-cookie": "^2.3.4",
    "snyk": "^1.189.0"
  },
  "devDependencies": {
    "easy-monitor": "^2.2.2",
    "jest": "^23.0.1",
    "standard": "^11.0.1"
  },
  "jest": {
    "testMatch": [
      "**/test/*.test.js"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/benchmark/**",
      "!**/test/**",
      "!**/bin/**",
      "!**/template/**",
      "**/*.js",
      "!**/coverage/**"
    ],
    "timers": "fake"
  },
  "standard": {
    "ignore": [
      "**/out/",
      "**/test/"
    ]
  },
  "snyk": true
}
